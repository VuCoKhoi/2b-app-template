{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src/",
    "incremental": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
